pipeline {
    
    agent any

    environment {
        CI = 'true'
    }

    stages {
        stage('Test') {
            steps {
                bat 'gradle test'
            }
        }

        stage('Build') {
            steps {
                bat 'gradle build'
            }
        }

        stage('Deploy') {
            steps {
                bat 'java -jar ./build/libs/spring-boot-employee-0.0.1-SNAPSHOT.jar'
            }
        }
    }
}
