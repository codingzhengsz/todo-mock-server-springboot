pipeline {
    
    agent any

    environment {
        CI = 'true'
    }

    stages {
        stage('Test') {
            steps {
                bat 'gradle test'
            }
        }

        stage('Test') {
            steps {
                bat 'gradle build'
            }
        }

        stage('Deploy') {
            steps {
                bat 'cd ./build/libs'
                bat 'java -jar spring-boot-employee-0.0.1-SNAPSHOT.jar'
            }
        }
    }
}